<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundClr"
    android:orientation="vertical"

    tools:context=".activity_classes.MainActivity">

    <android.support.v7.widget.Toolbar
        android:background="#005013"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold" />
<RelativeLayout
    android:onClick="cartIntent"
    android:layout_alignParentEnd="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cartTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageButton
                android:layout_toRightOf="@+id/cartTextView"
                android:src="@drawable/cart"
                android:background="#005013"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
</RelativeLayout>
        </RelativeLayout>


    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:layout_gravity="center_horizontal"
            android:id="@+id/spinnerId"
            android:popupBackground="@color/backgroundClr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />



    </LinearLayout>

    <ListView
        android:padding="8dp"
        android:id="@+id/productListId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>